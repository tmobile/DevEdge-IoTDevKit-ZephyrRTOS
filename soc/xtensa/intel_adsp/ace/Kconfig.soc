choice
	prompt "Intel ADSP SoC Selection"

	config SOC_INTEL_ACE15_MTPM
		bool "ACE 1.5 Meteor PCH M"
		depends on SOC_SERIES_INTEL_ACE

	config SOC_INTEL_ACE20_LNL
		bool "ACE 2.0 Lunar Lake PCH"
		depends on SOC_SERIES_INTEL_ACE

