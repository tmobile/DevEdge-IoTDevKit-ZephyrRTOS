/dts-v1/;
#include <silabs/efm32pg12b500f1024gl125.dtsi>
#include <dt-bindings/pwm/pwm.h>

/ {
	model = "Silicon Labs EFM32PG STK3402A board";
	compatible = "tmo,dev_edge";

	chosen {
		zephyr,console = &leuart0;
		zephyr,shell-uart = &leuart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,sflash = &w25q64;
		watchdog0 = &wdog0;
		watchdog1 = &wdog1;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		led3 = &led3;
		sw0 = &button0;
		modem = &usart1;
		pwm-buzzer = &pwm0;
		pwm-led0 = &white_pwm_led;
		pwm-led1 = &red_pwm_led;
		pwm-led2 = &green_pwm_led;
		pwm-led3 = &blue_pwm_led;
		white-led = &led0;
		red-led = &led1;
		green-led = &led2;
		blue-led = &led3;
		white-pwm-led = &white_pwm_led;
		red-pwm-led = &red_pwm_led;
		green-pwm-led = &green_pwm_led;
		blue-pwm-led = &blue_pwm_led;
	};

	leds {
		compatible = "gpio-leds";

		led0: led_0 {
			gpios = <&gpioc 7 0>;
			label = "LED WHITE";
		};
		led1: led_1 {
			gpios = <&gpioc 8 0>;
			label = "LED RED";
		};
		led2: led_2 {
			gpios = <&gpioc 9 0>;
			label = "LED GREEN";
		};
		led3: led_3 {
			gpios = <&gpioc 10 0>;
			label = "LED BLUE";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		white_pwm_led: white_pwm_led {
			pwms = <&pwm1 0 100000 PWM_POLARITY_NORMAL>;
			label = "PWM LED WHITE";
		};
		red_pwm_led: red_pwm_led {
			pwms = <&pwm2 1 100000 PWM_POLARITY_NORMAL>;
			label = "PWM LED RED";
		};
		green_pwm_led: green_pwm_led {
			pwms = <&pwm3 2 100000 PWM_POLARITY_NORMAL>;
			label = "PWM LED GREEN";
		};
		blue_pwm_led: blue_pwm_led {
			pwms = <&pwm4 3 100000 PWM_POLARITY_NORMAL>;
			label = "PWM LED BLUE";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpiob 13 GPIO_ACTIVE_LOW>;
			label = "User Push Button 0";
		};
	};

	regulator_batt: regulator-bat-chg {
		label = "vsys-batt-chg";
		regulator-name = "bq24250rge";
		regulator-boot-on;
	};
};

&cpu0 {
	clock-frequency = <38400000>;
};

&usart0 {
	current-speed = <115200>;
	location-rx = <GECKO_LOCATION(28) GECKO_PORT_F GECKO_PIN(5)>;
	location-tx = <GECKO_LOCATION(28) GECKO_PORT_F GECKO_PIN(4)>;
	status = "okay";
	label = "UART_0";
};

&usart1 {
	current-speed   = <115200>;
	location-rx     = <GECKO_LOCATION(20) GECKO_PORT_D GECKO_PIN(13)>;
	location-tx     = <GECKO_LOCATION(20) GECKO_PORT_D GECKO_PIN(12)>;
	location-cts    = <GECKO_LOCATION(15) GECKO_PORT_D GECKO_PIN(11)>;
	location-rts    = <GECKO_LOCATION(13) GECKO_PORT_D GECKO_PIN(10)>;
	hw-flow-control;
	status = "okay";

	label = "UART_1";

	murata_1sc: murata_1sc {
		label = "MODEM";
		compatible = "murata,1sc";
		label = "murata,1sc";
		mdm-wake-host-gpios = <&gpiod 14 GPIO_ACTIVE_HIGH>;
		mdm-wake-mdm-gpios  = <&gpiod 15 GPIO_ACTIVE_HIGH>;
		mdm-rst-done-gpios  = <&gpiod 9 GPIO_ACTIVE_HIGH>;
		mdm-reset-gpios     = <&gpiod 8 GPIO_ACTIVE_HIGH>;
		mdm-rx-gpios        = <&gpiod 13 GPIO_ACTIVE_HIGH>;
		mdm-tx-gpios        = <&gpiod 12 GPIO_ACTIVE_HIGH>;
		mdm-cts-gpios       = <&gpiod 11 GPIO_ACTIVE_HIGH>;
		mdm-rts-gpios       = <&gpiod 10 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};
};

&usart3 {
	compatible = "silabs,gecko-spi-usart";
	location-clk = <GECKO_LOCATION(16) GECKO_PORT_C GECKO_PIN(0)>;
	location-rx = <GECKO_LOCATION(19) GECKO_PORT_C GECKO_PIN(2)>;
	location-tx = <GECKO_LOCATION(21) GECKO_PORT_C GECKO_PIN(3)>;
	cs-gpios = <&gpioc 1 GPIO_ACTIVE_LOW>;
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	label = "SPI_1";

	w25q64: w25q64jw@0 {
		compatible = "jedec,spi-nor";
		label = "w25q64jw";
		reg = <0>;
		spi-max-frequency = <6400000>;
		// note size is in bits
		size = <0x04000000>;
		jedec-id = [ef 60 17];
		sfdp-bfp = [
			e5 20 f9 ff ff ff ff 07 44 eb 08 6b 08 3b 42 bb
			fe ff ff ff ff ff 00 00 ff ff 40 eb 0c 20 0f 52
			10 d8 00 00 36 02 a6 00 82 ea 14 c9 e9 63 76 33
			7a 75 7a 75 f7 a2 d5 5c 19 f7 4d ff e9 30 f8 80
		];
		status = "okay";
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;
			// Set of storage for entire of the 4096Kb of flash
			storage_partition1: partition@0 {
				label = "storage";
				reg = <0x00000000 0x00800000>;
			};
		};
	};
};

&usart2 {
	compatible = "silabs,gecko-spi-usart";

	location-clk = <GECKO_LOCATION(3) GECKO_PORT_I GECKO_PIN(0)>;
	location-rx = <GECKO_LOCATION(6) GECKO_PORT_I GECKO_PIN(2)>;
	location-tx = <GECKO_LOCATION(8) GECKO_PORT_I GECKO_PIN(3)>;
	cs-gpios = <&gpioi 1 GPIO_ACTIVE_LOW>;
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	label = "SPI_0";

	rs9116w: rs9116w@0 {
		compatible = "silabs,rs9116w";
		reg = <0>;
		label = "RS9116W_0";
		spi-max-frequency = <6400000>;
		int-gpios = <&gpioa 6 GPIO_ACTIVE_HIGH>;                     // input
		reset-gpios = <&gpioa 9 GPIO_ACTIVE_LOW>;                    // output init LOW
		sleep-wake-indication-gpios = <&gpioa 5 GPIO_ACTIVE_LOW>;    // input
		wake-on-wireless-gpios = <&gpioa 3 GPIO_ACTIVE_HIGH>;        // input
		sleep-wake-confirmation-gpios = <&gpioa 4 GPIO_ACTIVE_HIGH>; // output init HIGH
		poc-gpios = <&gpioa 8 GPIO_ACTIVE_LOW>;                      // output init LOW
		status = "okay";
	};
};

&leuart0 {
	current-speed = <9600>;
	location-rx = <GECKO_LOCATION(6) GECKO_PORT_B GECKO_PIN(12)>;
	location-tx = <GECKO_LOCATION(6) GECKO_PORT_B GECKO_PIN(11)>;
	status = "okay";
};

&i2c0 {
	location-sda = <GECKO_LOCATION(1) GECKO_PORT_A GECKO_PIN(1)>;
	location-scl = <GECKO_LOCATION(31) GECKO_PORT_A GECKO_PIN(0)>;
	status = "okay";
};

&i2c1 {
	location-sda = <GECKO_LOCATION(12) GECKO_PORT_J GECKO_PIN(15)>;
	location-scl = <GECKO_LOCATION(10) GECKO_PORT_J GECKO_PIN(14)>;
	status = "okay";

	/* ST Microelectronics LIS2DW12 accelerometer */
	lis2dw12: lis2dw12@18 {
		compatible = "st,lis2dw12";
		reg = <0x18 0x4>;
		status = "okay";
		// Note int2 is not used
		irq-gpios =  <&gpiob 8 GPIO_ACTIVE_HIGH>;
                range = <2>;
                power-mode = <4>;
                tap-mode = <1>;
                tap-threshold = <12>, <12>, <14>;
                tap-latency = <0xF>;
		label = "LIS2DW12";
	};

	/* Sony GNSS receiver */
	sonycxd5605: sonycxd5605@24 {
		compatible = "sony,cxd5605";
		reg = <0x24 0x4>;
		status = "okay";
		alert-gpios = <&gpiof 7 GPIO_ACTIVE_LOW>;
		int-gpios = <&gpiof 9 GPIO_ACTIVE_HIGH>;
		pwr-gpios = <&gpiof 10 GPIO_ACTIVE_HIGH>;
		label = "CXD5605";
	};

	/* AMS Ambient Light Sensor */
	tsl2540: tsl2540@39 {
		compatible = "ams,tsl2540";
		reg = <0x39 0x4>;
		status = "okay";
		int-gpios = <&gpiob 6 GPIO_ACTIVE_LOW>;
		label = "TSL2540";
	};

	/*AMS Temperature Sensor */
	as6212: as6212@48 {
		compatible = "ams,as6212";
		reg = <0x48 0x4>;
		status = "okay";
		alert-gpios = <&gpiof 14 GPIO_ACTIVE_LOW>;
		label = "AS6212";
		label = "TEMP_0";
	};

	/* ST Microelectronics LPS22HH pressure sensor */
	lps22hh: lps22hh@5c {
		compatible = "st,lps22hh";
		reg = <0x5c 0x4>;
		status = "okay";
		drdy-gpios =  <&gpiof 15 GPIO_ACTIVE_HIGH>;
		label = "LPS22HH";
	};

	/* TI Switched-Mode Li-Ion Battery Charger */
	bq24250: bq24250@6a {
		compatible = "ti,bq24250";
		reg = <0x6a 0x7>;
		status = "okay";
		label = "BQ24250";
	};
};

&timer0 {

	status = "okay";
	label = "TIMER_0";

	/* Buzzer */
	pwm0: pwm {
		compatible = "silabs,gecko-pwm";

		status = "okay";
		label = "PWM_0";
		pin-location = <GECKO_LOCATION(16) GECKO_PORT_C GECKO_PIN(11)>;
		prescaler = <4>;
		#pwm-cells = <3>;
	};
};

&timer1 {
	status = "okay";
	label = "TIMER_1";

	/* White LED */
	pwm1: pwm {
		compatible = "silabs,gecko-pwm";

		status = "okay";
		label = "PWM_1";
		pin-location = <GECKO_LOCATION(12) GECKO_PORT_C GECKO_PIN(7)>;
		#pwm-cells = <3>;
	};

	/* Red LED */
	pwm2: pwm {
		compatible = "silabs,gecko-pwm";

		status = "okay";
		label = "PWM_2";
		pin-location = <GECKO_LOCATION(12) GECKO_PORT_C GECKO_PIN(8)>;
		#pwm-cells = <3>;
	};

	/* Green LED */
	pwm3: pwm {
		compatible = "silabs,gecko-pwm";

		status = "okay";
		label = "PWM_3";
		pin-location = <GECKO_LOCATION(12) GECKO_PORT_C GECKO_PIN(9)>;
		#pwm-cells = <3>;
	};

	/* Blue LED */
	pwm4: pwm {
		compatible = "silabs,gecko-pwm";

		status = "okay";
		label = "PWM_4";
		pin-location = <GECKO_LOCATION(12) GECKO_PORT_C GECKO_PIN(10)>;
		#pwm-cells = <3>;
	};
};

&rtcc0 {
	prescaler = <32768>;
	status = "okay";
};

&gpio {
	location-swo = <0>;
	status = "okay";
};

&gpioa {
	status = "okay";
};

&gpiob {
	status = "okay";
};

&gpioc {
	status = "okay";
};

&gpiod {
	status = "okay";
};

&gpiof {
	status = "okay";
};

&gpioi {
	status = "okay";
};

&gpioj {
	status = "okay";
};

&gpiok {
	status = "okay";
};

&wdog0 {
	status = "okay";
};

&wdog1 {
	status = "okay";
};

&flash0 {

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set 6Kb of storage at the end of the 1024Kb of flash */
		storage_partition: partition@fe800 {
			label = "storage22";
			reg = <0x000fe800 0x00001800>;
		};

	};
};

&trng0 {
	status = "okay";
};
